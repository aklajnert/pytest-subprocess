# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py, rst, ini}]
indent_style = space
indent_size = 4

[*.py]
max_line_length = 89
known_first_party = docker_manager
multi_line_output = 3
default_section = THIRDPARTY

[*.{html, css, scss, json, yml, ts}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.rst]
max_line_length = 78

[Makefile]
indent_style = tab

[nginx.conf]
indent_style = space
indent_size = 2
